@model Meditatori.Models.Ad

@{
    ViewData["Title"] = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-5">
            <div class="project-info-box mt-0">
                <h5>Description</h5>
                <p class="mb-0">@Html.DisplayFor(model => model.Content)</p>
            </div><!-- / project-info-box -->

            <div class="project-info-box">
                <p><b>Location:</b> @Model.Location.name</p>
                <p><b>EducationLevel:</b> @Model.EducationLevel.name</p>
                <p><b>Calification:</b> @Model.Calification.name</p>
                <p>
                    <b>Availability:</b> @if (Model.AvailabilityOnline)
                    {
                    <p>Online </p>}@if (Model.AvailabilityStudentHome)
                    {<p>Student Home.</p>}@if (Model.AvailabilityHome)
                    {<p>Home.</p>}</p>
                    <p class="mb-0"><b>Price:</b> @Html.DisplayFor(model => model.PricePerSession) RON</p>
                </div><!-- / project-info-box -->

            <div class="project-info-box mt-0 mb-0">
                <p class="mb-0">
                    <span class="fw-bold mr-10 va-middle hide-mobile">Share:</span>
                    <a href="#x" class="btn btn-xs btn-facebook btn-circle btn-icon mr-5 mb-0"><i class="fab fa-facebook-f"></i></a>
                    <a href="#x" class="btn btn-xs btn-twitter btn-circle btn-icon mr-5 mb-0"><i class="fab fa-twitter"></i></a>
                    <a href="#x" class="btn btn-xs btn-pinterest btn-circle btn-icon mr-5 mb-0"><i class="fab fa-pinterest"></i></a>
                    <a href="#x" class="btn btn-xs btn-linkedin btn-circle btn-icon mr-5 mb-0"><i class="fab fa-linkedin-in"></i></a>
                </p>
            </div><!-- / project-info-box -->
        </div><!-- / column -->

        <div class="col-md-7">
            <img src="https://via.placeholder.com/400x300/FFB6C1/000000" alt="project-image" class="rounded">
            <div class="project-info-box">
                <p><b>Subject:</b> @Model.Subject.name</p>
                <p><b>Date:</b> @Model.ExpirationDate</p>
            </div><!-- / project-info-box -->
        </div><!-- / column -->
    </div>
</div>